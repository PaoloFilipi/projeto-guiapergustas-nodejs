<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container center">
        <h1 class="mt-3"><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder" class="mt-4">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button  type="submit" class="btn btn-primary mt-3 float-right">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
           <div class="card mt-3">
               <div class="card-body">
                   
                <p><%= resposta.corpo %></p>
                <hr>
                <p><%= resposta.createdAt%></p>
               </div>
           </div>
        <% })  %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>